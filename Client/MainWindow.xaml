<Window x:Class="Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="Client" Height="450" Width="900" ResizeMode="NoResize">
    <Grid>
        <ListBox x:Name="ClientLog" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="67,11,0,0" Height="186" VerticalAlignment="Top" HorizontalAlignment="Left" Width="319"/>
        <TextBox x:Name="msg" HorizontalAlignment="Left" Margin="67,225,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="319" RenderTransformOrigin="0.5,0.5" Height="129"/>
        <Button x:Name="Connect" Content="Connect" HorizontalAlignment="Left" Margin="227,202,0,0" VerticalAlignment="Top" Height="18" Width="77" Click="Connect_Click"/>
        <Button x:Name="Send" Content="Send" HorizontalAlignment="Left" Margin="309,359,0,0" VerticalAlignment="Top" Height="18" Width="77" Click="Send_Click"/>
        <Label Content="Client log:" HorizontalAlignment="Left" Margin="4,11,0,0" VerticalAlignment="Top"/>
        <Label Content="Massage:" HorizontalAlignment="Left" Margin="7,220,0,0" VerticalAlignment="Top" Width="60"/>
        <TextBox x:Name="uName" HorizontalAlignment="Left" Margin="67,202,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="155" RenderTransformOrigin="0.5,0.5" Height="18" Text="ChinChopMan"/>
        <Label Content="Username:" HorizontalAlignment="Left" Margin="0,198,0,0" VerticalAlignment="Top" Width="67"/>
        <Button x:Name="Disconnect" Content="Disconnect" HorizontalAlignment="Left" Margin="309,202,0,0" VerticalAlignment="Top" Height="18" Width="77" Click="Disconnect_Click"/>
        <Label Content="Напишите &quot;~&quot; в самом начале сообщения, &#xA;если хотите &quot;перевернуть&quot; сообщение" HorizontalAlignment="Left" Margin="428,11,0,0" VerticalAlignment="Top" Height="84" Width="462"/>

    </Grid>
</Window>
