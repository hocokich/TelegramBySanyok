<Window x:Class="Server.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Server"
        mc:Ignorable="d"
        Title="Server" Height="450" Width="450" ResizeMode="NoResize">
    <Grid>
        <Button x:Name="Start" Content="Start" Margin="70,324,0,0" VerticalAlignment="Top" Height="66" HorizontalAlignment="Left" Width="153" Click="Start_Click"/>
        <Button x:Name="Stop" Content="Stop" Margin="229,324,0,0" VerticalAlignment="Top" Height="66" HorizontalAlignment="Left" Width="152" Click="Stop_Click"/>
        <ListBox x:Name="ServerLog" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="70,41,0,0" Height="278" VerticalAlignment="Top" HorizontalAlignment="Left" Width="310"/>
        <Label Content="Server log:" HorizontalAlignment="Left" Margin="71,10,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
